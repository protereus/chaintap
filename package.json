{
  "name": "chaintap",
  "version": "0.1.0",
  "description": "Zero-config blockchain event indexer - Index EVM chain events to SQLite without GraphQL or complex setup",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "chaintap": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts --dir tests/unit",
    "test:int": "vitest run --config vitest.config.ts --dir tests/integration",
    "test:cov": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "indexer",
    "events",
    "evm",
    "sqlite",
    "web3",
    "dapp",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/protereus/chaintap.git"
  },
  "bugs": {
    "url": "https://github.com/protereus/chaintap/issues"
  },
  "homepage": "https://github.com/protereus/chaintap#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "commander": "^12.1.0",
    "better-sqlite3": "^11.5.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.2.0",
    "zod": "^3.23.0",
    "yaml": "^2.6.0",
    "p-retry": "^6.2.0"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "@types/node": "^22.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "tsx": "^4.19.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "prettier": "^3.3.0",
    "@vitest/coverage-v8": "^2.1.0"
  }
}
